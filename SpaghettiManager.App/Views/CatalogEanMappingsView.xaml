<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SpaghettiManager.App.Views.CatalogEanMappingsView"
    x:DataType="viewModels:CatalogEanMappingsViewModel"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:modelRecords="clr-namespace:SpaghettiManager.Model.Records;assembly=SpaghettiManager.Model"
    xmlns:viewModels="clr-namespace:SpaghettiManager.App.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <HorizontalStackLayout Spacing="8">
                <Label FontAttributes="Bold" Text="EAN mappings" />
                <Button Command="{Binding AddMappingCommand}" Text="Add mapping" />
            </HorizontalStackLayout>

            <Label FontSize="12" Text="{Binding Summary}" TextColor="{DynamicResource SecondaryTextColor}" />

            <CollectionView ItemsSource="{Binding Mappings}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="modelRecords:Spool">
                        <Border
                            Margin="0,4"
                            Padding="12"
                            StrokeThickness="0">
                            <VerticalStackLayout Spacing="6">
                                <Label FontAttributes="Bold" Text="{Binding Barcode}" />
                                <Label FontSize="12" Text="{Binding Manufacturer}" />
                                <Label FontSize="12" Text="{Binding Material.Name}" />
                                <Label FontSize="12" Text="{Binding Material.DiameterMm, StringFormat='Diameter: {0} mm'}" />
                                <Label FontSize="12" Text="{Binding Carrier.SpoolType}" />
                                <HorizontalStackLayout Spacing="8">
                                    <Button
                                        Command="{Binding Source={x:Reference Root}, Path=BindingContext.EditMappingCommand}"
                                        CommandParameter="{Binding .}"
                                        Text="Edit" />
                                    <Button
                                        Command="{Binding Source={x:Reference Root}, Path=BindingContext.MergeMappingCommand}"
                                        CommandParameter="{Binding .}"
                                        Text="Merge" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label
                        FontSize="12"
                        HorizontalOptions="Center"
                        Text="{Binding EmptyMessage}"
                        TextColor="{DynamicResource SecondaryTextColor}" />
                </CollectionView.EmptyView>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
