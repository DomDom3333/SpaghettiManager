<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SpaghettiManager.App.Views.ScanReviewView"
    x:DataType="viewModels:ScanReviewViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
    xmlns:viewModels="clr-namespace:SpaghettiManager.App.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <Frame BackgroundColor="{DynamicResource SecondaryContainer}" Padding="12">
                <VerticalStackLayout Spacing="4">
                    <Label FontAttributes="Bold" Text="{Binding SummaryTitle}" />
                    <Label FontSize="12" Text="{Binding SummarySubtitle}" />
                    <Label FontSize="10" Text="{Binding ScannedSpool.Barcode, StringFormat='Barcode: {0}'}" />
                </VerticalStackLayout>
            </Frame>

            <Frame BackgroundColor="{DynamicResource SecondaryContainer}" Padding="12">
                <VerticalStackLayout Spacing="4">
                    <Label FontAttributes="Bold" Text="{Binding MappingStatusTitle}" />
                    <Label FontSize="12" Text="{Binding MappingStatusSubtitle}" />
                </VerticalStackLayout>
            </Frame>

            <Label FontAttributes="Bold" Text="Review details" />
            <Frame Margin="0,4" Padding="12">
                <VerticalStackLayout Spacing="10">
                    <Entry Placeholder="Manufacturer" Text="{Binding ScannedSpool.Manufacturer}" />
                    <Entry Placeholder="Material name" Text="{Binding ScannedSpool.Material.Name}" />
                    <Entry Placeholder="Material family" Text="{Binding ScannedSpool.Material.Family}" />
                    <Entry Placeholder="Material diameter (mm)" Text="{Binding ScannedSpool.Material.DiameterMm}" />
                    <Entry Placeholder="Material color" Text="{Binding ScannedSpool.Material.Color}" />
                    <Entry Placeholder="Carrier type" Text="{Binding ScannedSpool.Carrier.SpoolType}" />
                    <Entry Placeholder="Empty carrier weight (g)" Text="{Binding ScannedSpool.Carrier.EmptyWeightGrams}" />
                    <Editor AutoSize="TextChanges" Placeholder="Notes" Text="{Binding ScannedSpool.Material.Notes}" />
                </VerticalStackLayout>
            </Frame>

            <HorizontalStackLayout Spacing="8">
                <Label Text="Save EAN mapping" VerticalOptions="Center" />
                <Switch IsToggled="{Binding SaveEanMapping}" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="8">
                <Button Command="{Binding AddToInventoryCommand}" Text="Add to inventory" />
                <Button Command="{Binding EditCatalogCommand}" Text="Edit catalog" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
