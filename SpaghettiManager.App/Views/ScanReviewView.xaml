<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SpaghettiManager.App.Views.ScanReviewView"
    x:DataType="viewModels:ScanReviewViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
    xmlns:viewModels="clr-namespace:SpaghettiManager.App.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <Frame BackgroundColor="{DynamicResource SecondaryContainer}" Padding="12">
                <VerticalStackLayout Spacing="4">
                    <Label FontAttributes="Bold" Text="{Binding SummaryTitle}" />
                    <Label FontSize="12" Text="{Binding SummarySubtitle}" />
                    <Label FontSize="10" Text="Barcode: {Binding Barcode}" />
                </VerticalStackLayout>
            </Frame>

            <Label FontAttributes="Bold" Text="Review details" />
            <Label FontSize="12" Text="Select from known options or fill in the missing fields." />

            <Picker
                ItemsSource="{Binding ManufacturerOptions}"
                SelectedItem="{Binding Manufacturer}"
                Title="Manufacturer" />
            <Picker
                ItemsSource="{Binding ProductLineOptions}"
                SelectedItem="{Binding ProductLine}"
                Title="Product line" />
            <Picker
                ItemsSource="{Binding MaterialOptions}"
                SelectedItem="{Binding Material}"
                Title="Material" />
            <Picker
                ItemsSource="{Binding ColorOptions}"
                SelectedItem="{Binding ColorName}"
                Title="Color" />
            <Entry Placeholder="Batch / lot" Text="{Binding BatchLot}" />
            <Picker
                ItemsSource="{Binding CarrierOptions}"
                SelectedItem="{Binding Carrier}"
                Title="Spool / carrier" />
            <Entry Keyboard="Numeric" Placeholder="Initial weight (g)" Text="{Binding InitialWeight}" />

            <HorizontalStackLayout Spacing="8">
                <Label Text="Save EAN mapping" VerticalOptions="Center" />
                <Switch IsToggled="{Binding SaveEanMapping}" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="8">
                <Button Command="{Binding AddToInventoryCommand}" Text="Add to inventory" />
                <Button Command="{Binding EditCatalogCommand}" Text="Edit catalog" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
