<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SpaghettiManager.App.Views.InventoryListView"
    x:DataType="viewModels:InventoryListViewModel"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:modelRecords="clr-namespace:SpaghettiManager.Model.Records;assembly=SpaghettiManager.Model"
    xmlns:viewModels="clr-namespace:SpaghettiManager.App.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid RowDefinitions="Auto,*">
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label FontAttributes="Bold" Text="Inventory" />
            <Label FontSize="12" Text="{Binding FilterDescription}" />
            <CollectionView ItemsSource="{Binding Filters}" SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="8" Orientation="Horizontal" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="viewModels:InventoryListViewModel+FilterChip">
                        <Button
                            Command="{Binding Source={x:Reference Root}, Path=BindingContext.ApplyFilterCommand}"
                            CommandParameter="{Binding .}"
                            Text="{Binding Label}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <HorizontalStackLayout Spacing="8">
                <Button Command="{Binding AddManualCommand}" Text="Add manually" />
                <Button Command="{Binding ScanBarcodeCommand}" Text="Scan barcode" />
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="modelRecords:Spool">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems Mode="Reveal">
                                <SwipeItem
                                    BackgroundColor="{DynamicResource ErrorContainer}"
                                    Command="{Binding Source={x:Reference Root}, Path=BindingContext.MarkEmptyCommand}"
                                    CommandParameter="{Binding .}"
                                    Text="Mark empty" />
                                <SwipeItem
                                    BackgroundColor="{DynamicResource SecondaryContainer}"
                                    Command="{Binding Source={x:Reference Root}, Path=BindingContext.UpdateRemainingCommand}"
                                    CommandParameter="{Binding .}"
                                    Text="Update remaining" />
                                <SwipeItem
                                    BackgroundColor="{DynamicResource PrimaryContainer}"
                                    Command="{Binding Source={x:Reference Root}, Path=BindingContext.ChangeSpoolCommand}"
                                    CommandParameter="{Binding .}"
                                    Text="Change carrier" />
                            </SwipeItems>
                        </SwipeView.RightItems>
                        <Border Margin="12,4" Padding="12">
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                <BoxView
                                    Color="{Binding Material.Color}"
                                    HeightRequest="32"
                                    WidthRequest="32" />
                                <VerticalStackLayout Grid.Column="1" Spacing="2">
                                    <Label FontAttributes="Bold" Text="{Binding Manufacturer}" />
                                    <Label FontSize="12" Text="{Binding Material.Name}" />
                                    <Label FontSize="12" Text="{Binding Material.Color}" />
                                </VerticalStackLayout>
                                <VerticalStackLayout
                                    Grid.Column="2"
                                    HorizontalOptions="End"
                                    Spacing="2">
                                    <Label FontAttributes="Bold" Text="{Binding Material.Family}" />
                                    <Label FontSize="12" Text="{Binding Carrier.SpoolType}" />
                                    <Label
                                        FontSize="10"
                                        Text="{Binding Carrier.EmptyWeightGrams, StringFormat='Empty: {0} g'}" />
                                </VerticalStackLayout>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={x:Reference Root}, Path=BindingContext.OpenDetailCommand}" CommandParameter="{Binding .}" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Border>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentView>
