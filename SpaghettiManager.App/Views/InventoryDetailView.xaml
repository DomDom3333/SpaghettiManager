<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SpaghettiManager.App.Views.InventoryDetailView"
    x:DataType="viewModels:InventoryDetailViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
    xmlns:viewModels="clr-namespace:SpaghettiManager.App.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <Label FontAttributes="Bold" Text="Overview" />
            <Grid
                ColumnDefinitions="*,*"
                ColumnSpacing="12"
                RowDefinitions="Auto,Auto,Auto"
                RowSpacing="8">
                <Entry
                    Grid.Column="0"
                    Grid.Row="0"
                    Placeholder="Manufacturer"
                    Text="{Binding Spool.Manufacturer}" />
                <Entry
                    Grid.Column="1"
                    Grid.Row="0"
                    Placeholder="Material"
                    Text="{Binding Spool.Material.Name}" />
                <Entry
                    Grid.Column="0"
                    Grid.Row="1"
                    Placeholder="Color"
                    Text="{Binding Spool.Material.Color}" />
                <Entry
                    Grid.Column="1"
                    Grid.Row="1"
                    Placeholder="Family"
                    Text="{Binding Spool.Material.Family}" />
                <Entry
                    Grid.Column="0"
                    Grid.Row="2"
                    Placeholder="Opacity"
                    Text="{Binding Spool.Material.Opacity}" />
                <Entry
                    Grid.Column="1"
                    Grid.Row="2"
                    Placeholder="Finish"
                    Text="{Binding Spool.Material.Finish}" />
            </Grid>

            <Label FontAttributes="Bold" Text="Material details" />
            <Grid
                ColumnDefinitions="*,*"
                ColumnSpacing="12"
                RowDefinitions="Auto,Auto,Auto"
                RowSpacing="8">
                <Entry
                    Grid.Column="0"
                    Grid.Row="0"
                    Placeholder="Diameter (mm)"
                    Text="{Binding Spool.Material.DiameterMm}" />
                <Entry
                    Grid.Column="1"
                    Grid.Row="0"
                    Placeholder="Density (g/cm³)"
                    Text="{Binding Spool.Material.Density_g_cm3}" />
                <Entry
                    Grid.Column="0"
                    Grid.Row="1"
                    Placeholder="Glass transition (°C)"
                    Text="{Binding Spool.Material.GlassTransitionC}" />
                <Entry
                    Grid.Column="1"
                    Grid.Row="1"
                    Placeholder="Carrier type"
                    Text="{Binding Spool.Carrier.SpoolType}" />
                <Entry
                    Grid.Column="0"
                    Grid.Row="2"
                    Placeholder="Carrier weight (g)"
                    Text="{Binding Spool.Carrier.EmptyWeightGrams}" />
                <Entry
                    Grid.Column="1"
                    Grid.Row="2"
                    Placeholder="Carrier maker"
                    Text="{Binding Spool.Carrier.Manufacturer}" />
            </Grid>

            <Label FontAttributes="Bold" Text="Notes" />
            <Editor
                AutoSize="TextChanges"
                Placeholder="Notes"
                Text="{Binding Spool.Material.Notes}" />

            <Label FontAttributes="Bold" Text="Actions" />
            <HorizontalStackLayout Spacing="8">
                <Button Command="{Binding RespoolCommand}" Text="Respool" />
                <Button Command="{Binding WeighNowCommand}" Text="Weigh now" />
                <Button Command="{Binding MarkEmptyCommand}" Text="Mark empty" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
