<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SpaghettiManager.App.Views.InventoryActionView"
    x:DataType="viewModels:InventoryActionViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
    xmlns:viewModels="clr-namespace:SpaghettiManager.App.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <Label FontAttributes="Bold" FontSize="20" Text="{Binding Title}" />
            <Label FontSize="12" Text="{Binding Description}" />

            <Entry Placeholder="Material name" Text="{Binding Material.Name}" />
            <Entry Placeholder="Material family" Text="{Binding Material.Family}" />
            <Entry Placeholder="Material diameter (mm)" Text="{Binding Material.DiameterMm}" />
            <Entry Placeholder="Carrier manufacturer" Text="{Binding Carrier.Manufacturer}" />
            <Entry Placeholder="Carrier type" Text="{Binding Carrier.SpoolType}" />
            <Entry Placeholder="Empty carrier weight (g)" Text="{Binding Carrier.EmptyWeightGrams}" />
            <Editor AutoSize="TextChanges" Placeholder="Notes" Text="{Binding Material.Notes}" />

            <Button Command="{Binding SaveCommand}" Text="Save" />
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
