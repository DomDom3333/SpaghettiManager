<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SpaghettiManager.App.Views.SettingsView"
    x:DataType="viewModels:SettingsViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
    xmlns:viewModels="clr-namespace:SpaghettiManager.App.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <Label FontAttributes="Bold" Text="App settings" />
            <Picker
                ItemsSource="{Binding UnitsOptions}"
                SelectedItem="{Binding SelectedUnits}"
                Title="Units" />
            <Entry Placeholder="Default diameter" Text="{Binding DefaultDiameter}" />
            <Entry Placeholder="Default storage humidity" Text="{Binding DefaultStorageHumidity}" />
            <HorizontalStackLayout Spacing="8">
                <Label VerticalOptions="Center" Text="Auto-save EAN mappings" />
                <Switch IsToggled="{Binding AutoSaveEanMappings}" />
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="8">
                <Label VerticalOptions="Center" Text="Enable advanced catalog editing" />
                <Switch IsToggled="{Binding EnableAdvancedCatalogEditing}" />
            </HorizontalStackLayout>

            <Label FontAttributes="Bold" Text="Data management" />
            <Button Command="{Binding ImportExportCommand}" Text="Import/export JSON" />
            <Button Command="{Binding ResetCatalogCommand}" Text="Reset catalog to defaults" />
            <Button Command="{Binding MergeDuplicatesCommand}" Text="Duplicate merge wizard" />
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
