<?xml version="1.0" encoding="utf-8" ?>
<Shell
    Shell.FlyoutBehavior="Disabled"
    x:Class="SpaghettiManager.App.AppShell"
    x:DataType="local:AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:local="clr-namespace:SpaghettiManager.App"
    xmlns:pages="clr-namespace:SpaghettiManager.App.Pages"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <TabBar>
        <ShellContent
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="home"
            Title="Home" />

        <ShellContent
            ContentTemplate="{DataTemplate pages:InventoryListPage}"
            Route="inventory"
            Title="Inventory" />

        <ShellContent
            ContentTemplate="{DataTemplate pages:ScanPage}"
            Route="scan"
            Title="Scan" />

        <ShellContent
            ContentTemplate="{DataTemplate pages:CatalogHomePage}"
            Route="catalog"
            Title="Catalog" />

        <ShellContent
            ContentTemplate="{DataTemplate pages:SettingsPage}"
            Route="settings"
            Title="Settings" />

    </TabBar>
</Shell>
